<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AccountFragment"
    android:background="@drawable/background_houserent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:background="@drawable/logo_houserent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="250dp"
            app:cardBackgroundColor="#99FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký tài khoản  "
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#f6b93b">
                </TextView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout

                        android:id="@+id/Linear_TaiKhoan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/edtRegister_UserName"
                            android:minWidth="100dp"
                            android:minHeight="48dp"
                            android:hint="Nhập tên đăng nhập "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dp">
                        </EditText>
                        <EditText
                            android:id="@+id/edtRegister_PhoneNumber"
                            android:minWidth="100dp"
                            android:minHeight="48dp"
                            android:hint="Số điện thoại "
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                        </EditText>
                        <EditText
                            android:id="@+id/edtRegister_PassWord"
                            android:hint="Nhâp mật khẩu"
                            android:minWidth="100dp"
                            android:minHeight="48dp"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                        </EditText>
                        <EditText
                            android:id="@+id/edtRegister_RePassWord"
                            android:hint="Nhâp lại  mật khẩu"
                            android:minWidth="100dp"
                            android:minHeight="48dp"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                        </EditText>
                        <Button
                            android:id="@+id/btnRegister_Register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đăng ký"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#2196F3">
                        </Button>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Đã có tài khoản"
                            android:alpha="0.8"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="116dp">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>